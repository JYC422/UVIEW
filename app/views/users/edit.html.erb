<h1 class="formhead">- Edit Profile -</h1>
<%= form_for current_user do |f| %>
  <% if current_user.errors.any? %>
    <div class="error_messages">
      <h2>Form is invalid</h2>
      <ul>
        <% for message in current_user.errors.full_messages %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field">
    <%= f.label "Name:" %>
    <%= f.text_field :user_name %>
  </div><br>
  <div class="field">
    <%= f.label "Number of Reviews:" %><br>
    <%= f.text_field :num_reviews %>
  </div><br>
  <div class="field">
    <%= f.label "About Me:" %><br>
    <%= f.text_area :about_me %>
  </div><br>

  <div class="actions butt"><%= f.submit "Submit " %></div>
<% end %>
