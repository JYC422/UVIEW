<main>
    <h1><%= @user.user_name %></h1>
    <%= link_to "https://goo.gl/QirYt5" do %>
      <%= gravatar_image_tag(current_user.email, :alt => @user.user_name, width: 10) %><br>
      <span><small>Change Gravatar</small></span>
    <% end %>
    <br>
    <br>
    <p><%= "Number of Reviews: #{@user.num_reviews}" %></p>
